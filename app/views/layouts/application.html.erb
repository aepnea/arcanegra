            <div class="logo-text inline-middle">arcanegra</div>
          </div>
        <% end %>
        <div class="menu">
          <nav class="mdl-navigation">
            <span class="underline-style">
              <%= link_to "¿Qué hacemos?", que_hacemos_path %>
            </span>
            <span class="underline-style">
              <%= link_to "Artistas", artistas_path%>
            </span>
            <span class="underline-style">
              <%= link_to "Productos", categorias_path %>
            </span>
          </nav>
        </div>
        <div class="user-info">
          <div class="user inline-middle">
            <% if customer_signed_in? %>
              <p class="name-header">Hola  <%= current_customer.email %> </p>
              <%= link_to destroy_customer_session_path, method: :delete do%>
                <p class="current">Salir</p>
              <% end %>
            <% elsif admin_signed_in? %>
              <p class="name-header">Hola <%= current_admin.email %> </p>
              <%= link_to destroy_admin_session_path, method: :delete do%>
                <p class="current">Salir</p>
              <% end %>
            <% else %>
              <%=link_to "Entrar", new_customer_session_path, :class => "login" %>
            <% end %>
          </div>
          <div class="cart inline-middle">
            <%= link_to carrito_path, :class => "link-carrito inline-middle" do%>
              <span class="cart-txt inline-middle">carro</span>
              <div class="cart-ico inline-middle"><%= @p_id.size %></div>
            <% end %>
          </div>
        </div>
      </div>
    </header>
  <% if current_page?(root_path) %></div><%end%>

  <main>
    <div class="row-container relative">
      <%= yield %>
    </div>
  </main>
  <footer class="mdl-mega-footer">
    <div class="mdl-mega-footer__middle-section footer">

    </div>
  </footer>
</body>
</html>
