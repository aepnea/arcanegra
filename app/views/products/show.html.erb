<p id="notice"><%= notice %></p>

<p>
  <strong>Product type:</strong>
  <%= @product.product_type.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @product.artist.firstname %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Short description:</strong>
  <%= @product.short_description %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>On sale:</strong>
  <%= @product.on_sale %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>SKU:</strong>
  <%= @product.sku %>
</p>

<%= render 'images/form', product_id: @product.id %>
<ul>
  <% @product.images.each do |image| %>
  <li>
    <span><%= image_tag image.archivo.url %></span>
		<span><%=  link_to "x", image, method: :delete %></span>
    <%= image.archivo.url%>
  </li>
  <% end %>
</ul>


