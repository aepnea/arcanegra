<p id="notice"><%= notice %></p>

<h1>Listing Cart Product Groups</h1>

<table>
  <thead>
    <tr>
      <th>Product group</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_product_groups.each do |cart_product_group| %>
      <tr>
        <td><%= cart_product_group.product_group %></td>
        <td><%= cart_product_group.cart %></td>
        <td><%= cart_product_group.quantity %></td>
        <td><%= link_to 'Show', cart_product_group %></td>
        <td><%= link_to 'Edit', edit_cart_product_group_path(cart_product_group) %></td>
        <td><%= link_to 'Destroy', cart_product_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

