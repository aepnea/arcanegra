<p id="notice"><%= notice %></p>

<h1>Listing Car Product Groups</h1>

<table>
  <thead>
    <tr>
      <th>Product group</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_product_groups.each do |car_product_group| %>
      <tr>
        <td><%= car_product_group.product_group %></td>
        <td><%= car_product_group.cart %></td>
        <td><%= link_to 'Show', car_product_group %></td>
        <td><%= link_to 'Edit', edit_car_product_group_path(car_product_group) %></td>
        <td><%= link_to 'Destroy', car_product_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

